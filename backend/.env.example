# Server Configuration
ENVIRONMENT=development
DEBUG=True
API_VERSION=v1
PORT=8000

# Security
SECRET_KEY=your-secret-key-here-change-in-production
AADHAR_ENCRYPTION_KEY=your-aadhar-encryption-key-here-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# PostgreSQL Database
DATABASE_URL=postgresql://cloudcare:cloudcare_pwd123@postgres:5432/cloudcare_db
POSTGRES_USER=cloudcare
POSTGRES_PASSWORD=cloudcare_pwd123
POSTGRES_DB=cloudcare_db

# MongoDB
MONGODB_URL=mongodb://mongodb:27017
MONGODB_DB=cloudcare_wearables

# Redis Cache
REDIS_URL=redis://redis:6379/0
